#!/usr/bin/env php
<?php

function includeIfExists($file): mixed
{
    if (!file_exists($file)) {
        return null;
    }

    return include $file;
}

$loader = includeIfExists(__DIR__ . '/vendor/autoload.php');
if (!$loader instanceof \Composer\Autoload\ClassLoader) {
    $loader = includeIfExists(__DIR__ . '/../../autoload.php');
}

if (!$loader instanceof \Composer\Autoload\ClassLoader) {
    die(
        'You must set up the project dependencies, run the following commands:' . PHP_EOL .
        'curl -sS https://getcomposer.org/installer | php' . PHP_EOL .
        'php composer.phar install' . PHP_EOL
    );
}

use Symfony\Component\Console\Application;
use KoenVanMeijeren\ConvertToJUnitXML\Command\ConvertNpmAuditCommand;
use KoenVanMeijeren\ConvertToJUnitXML\Command\ConvertSensiolabsSecurityCheckCommand;
use KoenVanMeijeren\ConvertToJUnitXML\Command\ConvertStandardJsCommand;
use KoenVanMeijeren\ConvertToJUnitXML\Command\ConvertStylelintCommand;

$application = new Application('Convert to JUnit XML');
$application->add(
    new \KoenVanMeijeren\ConvertToJUnitXML\Command\ConvertBashGrepCommand(
        new \KoenVanMeijeren\ConvertToJUnitXML\Converters\Bash\Grep()
    )
);
$application->add(
    new ConvertNpmAuditCommand(
        new \KoenVanMeijeren\ConvertToJUnitXML\Converters\Npm\Audit()
    )
);
$application->add(
    new ConvertSensiolabsSecurityCheckCommand(
        new \KoenVanMeijeren\ConvertToJUnitXML\Converters\Sensiolabs\SecurityCheck()
    )
);
$application->add(
    new ConvertStandardJsCommand(
        new \KoenVanMeijeren\ConvertToJUnitXML\Converters\StandardJs\StandardJs()
    )
);
$application->add(
    new ConvertStylelintCommand(
        new \KoenVanMeijeren\ConvertToJUnitXML\Converters\Stylelint\Stylelint()
    )
);
$application->run();
